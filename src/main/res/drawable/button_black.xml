<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="false" >
       <shape xmlns:android="http://schemas.android.com/apk/res/android">
           <solid android:color="@color/background_black" />
           <stroke android:width="1dp" android:color="@color/background_black_light" />
           <corners android:radius="2dp" />
           <padding android:left="@dimen/standard_side_padding"
               android:right="@dimen/standard_side_padding" />
       </shape>
   </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/background_black_darker" />
            <stroke android:width="1dp" android:color="@color/background_black_light" />
            <corners android:radius="2dp" />
            <padding android:left="@dimen/standard_side_padding"
                android:right="@dimen/standard_side_padding" />
        </shape>
    </item>
</selector>

