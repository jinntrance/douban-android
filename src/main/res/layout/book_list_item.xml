<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    android:layout_width="fill_parent"   android:columnCount="3"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="60dp"   android:layout_gravity="left"
        android:layout_height="80dp"
        android:id="@+id/bookImage" android:layout_column="1"
        android:contentDescription="@string/book_cover" />

    <LinearLayout  android:layout_gravity="center"
        android:orientation="vertical"  android:layout_column="1"
        android:layout_width="300dp"
        android:layout_height="60dp" android:layout_row="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/bookTitle"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/bookAuthor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/bookPublisher" />

        </LinearLayout>

    <RelativeLayout     android:layout_column="1" android:layout_row="2"  android:layout_height="60dp"
        android:layout_width="20dp"  android:layout_gravity="right"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.0"
            android:id="@+id/ratingNum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratedStars"
            android:contentDescription="评分" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toread"
            android:id="@+id/wish" />

    </RelativeLayout>

</GridLayout>