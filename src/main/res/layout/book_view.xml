<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/book_basic"
                android:baselineAligned="false">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"  android:gravity="center"
                    android:layout_height="fill_parent"  android:layout_gravity="center"
                    android:id="@+id/book_basic_info"  android:layout_weight="0.3">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:id="@+id/book_img" android:src="@drawable/book"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content" android:layout_gravity="center"
                        android:layout_height="wrap_content">
                    <include layout="@layout/rating" android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/book_basic_info"  android:layout_weight="0.7">
                    <include layout="@layout/book_basic_info" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2011"
                        style="@style/DoubanTextGray"
                        android:id="@+id/bookPublishYear" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        style="@style/DoubanTextGray"
                        android:id="@+id/bookPages" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$192"
                        style="@style/DoubanTextGray"
                        android:id="@+id/bookPrice" />
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="想读"  android:layout_weight="0.25"
                android:id="@+id/toRead" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="在读"  android:layout_weight="0.25"
                android:id="@+id/reading" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="读过"  android:layout_weight="0.25"
                android:id="@+id/done" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="删除收藏" android:layout_weight="0.25"
                android:id="@+id/delete" />
        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/book_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content_intro" android:textColor="@color/text_green"
                    android:id="@+id/book_content_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Android design language relies on traditional typographic tools such as scale, space, rhythm, and alignment with an underlying grid. Successful deployment of these tools is essential to help users quickly understand a screen of information. To support such use of typography, Ice Cream Sandwich introduced a new type family named Roboto, created specifically for the requirements of UI and high-resolution screens."
                    android:id="@+id/book_content_abstract"
                    android:layout_gravity="left|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/book_author">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/author_intro" android:textColor="@color/text_green"
                    android:id="@+id/book_author_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Android design language relies on traditional typographic tools such as scale, space, rhythm, and alignment with an underlying grid. Successful deployment of these tools is essential to help users quickly understand a screen of information. To support such use of typography, Ice Cream Sandwich introduced a new type family named Roboto, created specifically for the requirements of UI and high-resolution screens."
                    android:id="@+id/book_author_abstract" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:id="@+id/book_annotation"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/annotation_icon"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annotation"
            android:id="@+id/annotation_num"
            android:layout_gravity="center"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_icon"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="right"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>