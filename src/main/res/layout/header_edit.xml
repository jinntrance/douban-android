<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel" android:onClick="back"
        android:src="@drawable/header_cancel"
        android:layout_gravity="center|left"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/title"
        android:layout_gravity="center"
        android:gravity="center" style="@style/DoubanActionBar.Title"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="false"
        android:layout_alignBaseline="@+id/cancel"
        android:layout_alignParentRight="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cancel" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公开"  style="@style/DoubanActionBar.Title"
        android:id="@+id/privacy"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:layout_alignBaseline="@+id/submit"
        android:layout_toLeftOf="@+id/submit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:longClickable="false" android:onClick="submit"
        android:src="@drawable/header_submit"
        android:layout_gravity="center|right"
        android:layout_alignParentRight="true" />

</RelativeLayout>