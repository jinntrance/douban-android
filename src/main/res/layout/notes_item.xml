<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:background="@drawable/button_green_darker"
            android:text="P423"  style="@style/DoubanButton.Small"
            android:id="@+id/page_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter one"
            android:id="@+id/chapter_name" style="@style/DoubanTextTitle.Green"
            android:singleLine="false"
            android:layout_alignBaseline="@+id/page_num"
            android:layout_toRightOf="@+id/page_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012-11-28 07:54:36"
            android:id="@+id/note_time"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"  android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/user_avatar"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"  android:layout_weight="7"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"   style="@style/DoubanTextTitle.Black"
                android:id="@+id/note_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"  android:maxLines="4" android:ellipsize="end"
                android:id="@+id/note_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>