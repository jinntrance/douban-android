<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_medium">
    <ImageView  android:contentDescription="Ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="0dp"
        android:id="@+id/star_icon"  android:padding="0dp"
        android:src="@drawable/search_result_rate"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratedStars"
        android:text="9"
        android:contentDescription="评分"
        android:textColor="@color/text_orange"
        android:layout_gravity="center" />
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    android:singleLine="true"  android:ellipsize="marquee"
        android:text="(90080)"
        android:id="@+id/ratingNum"
             android:layout_gravity="center" />
</LinearLayout>