<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.douban.book"  >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="15"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application android:label="@string/app_name"  android:theme="@android:style/Theme.Holo.Light"
        android:name="com.douban.base.Context"  >

        <activity android:label="@string/app_name" android:name=".ui.Search">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".ui.LoginActivity"/>
        <activity android:label="@string/app_name" android:name=".ui.Scanner"/>
        <activity android:label="@string/app_name" android:name=".ui.SearchResult"/>
        <activity android:label="@string/app_name" android:name=".ui.BookView"/>
    </application>
</manifest>
