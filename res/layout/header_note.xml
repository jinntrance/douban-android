<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"   android:paddingLeft="@dimen/padding_large" android:paddingRight="@dimen/padding_large"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/annotation_icon"
        android:src="@drawable/header_menu"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/title"   android:ellipsize="end"
        android:layout_gravity="center"  style="@style/DoubanActionBar.Title"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"  android:src="@drawable/header_circle"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/title"
        android:layout_marginLeft="@dimen/margin_medium" />
</RelativeLayout>