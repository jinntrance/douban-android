<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    android:background="@android:drawable/screen_background_light_transparent"
    android:layout_margin="0dp">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent" android:gravity="center"
      android:layout_margin="0dp"  android:weightSum="1"   android:layout_gravity="center"
      android:layout_height="match_parent">
    <ProgressBar android:layout_height="match_parent" android:visibility="visible"
        style="@style/GenericProgressIndicator" android:id="@+id/popup_progress" />
    <com.douban.base.TouchImageView
        android:layout_margin="0dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"  android:visibility="gone"
        android:id="@+id/image_popup"  android:adjustViewBounds="true"  android:scaleType="fitXY"
        android:src="@drawable/default_image"
        android:layout_gravity="center" />
  </LinearLayout>
</ScrollView>