<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
    android:layout_height="fill_parent"   android:layout_gravity="fill"
    style="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:layout_margin="0dp" android:padding="0dp">

  <FrameLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="0dp" android:layout_gravity="fill_horizontal"
      android:foregroundGravity="center">
    <ProgressBar android:layout_height="fill_parent" android:visibility="visible"   android:layout_gravity="center"
        style="@style/GenericProgressIndicator" android:id="@+id/popup_progress" />
    <uk.co.senab.photoview.PhotoView
        android:layout_margin="0dp"  android:padding="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:visibility="gone"
        android:id="@+id/image_popup"  android:adjustViewBounds="true"  android:scaleType="center"
        android:src="@drawable/default_image"
        android:layout_gravity="center" />
  </FrameLayout>
</ScrollView>