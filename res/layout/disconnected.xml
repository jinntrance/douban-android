<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/background_white"
    android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="1"
    android:layout_height="wrap_content" android:layout_gravity="center_vertical">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/disconnected" android:contentDescription=""
      android:layout_gravity="center_vertical" android:src="@drawable/no_network" />
    </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent" android:layout_weight="1"
      android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" android:textSize="@dimen/text_huge"
        android:text="@string/check_network" android:layout_gravity="center_horizontal"
        android:id="@+id/check_network" />
      </LinearLayout>
</LinearLayout>