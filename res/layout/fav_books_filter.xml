<?xml version="1.0" encoding="utf-8"?>

  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"  android:layout_margin="@dimen/margin_medium"
      android:layout_height="wrap_content"
      android:id="@+id/scrollView">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


      <LinearLayout
          android:layout_width="fill_parent"  android:layout_margin="@dimen/margin_medium"
          android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏状态："
            android:layout_gravity="center_vertical" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_large">

          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/wish"
              android:checked="false" android:onClick="checkSate"
              android:text="想读" />

          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="在读"  android:onClick="checkSate"
              android:id="@+id/reading"
              android:checked="false" />

          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="读过"  android:onClick="checkSate"
              android:id="@+id/read"
              android:checked="false" />
        </RadioGroup>
      </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent"  android:layout_margin="@dimen/margin_medium"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的评分："
            android:layout_gravity="center_vertical" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" style="@style/DoubanRatingBar"
            android:id="@+id/rating"
            android:numStars="5"
            android:paddingLeft="@dimen/padding_large" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent"    android:layout_margin="@dimen/margin_medium"
          android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏时间："
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_large">

          <EditText   android:editable="false"   android:maxEms="10"  android:singleLine="true"
              android:layout_width="wrap_content" android:layout_weight="1"
              android:layout_height="wrap_content" android:onClick="showDatePickerDialog"
              android:id="@+id/from_date"   />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="到"
              android:paddingLeft="@dimen/padding_large"
              android:paddingRight="@dimen/padding_large"
              android:layout_gravity="center_horizontal" />

          <EditText android:editable="false"   android:maxEms="10" android:singleLine="true"
              android:layout_width="wrap_content"   android:onClick="showDatePickerDialog"
              android:layout_height="wrap_content"  android:layout_weight="1"
              android:id="@+id/to_date" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent" android:layout_margin="@dimen/margin_medium"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的标签：" />

        <LinearLayout  android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tags_container"
            android:paddingLeft="@dimen/padding_large"></LinearLayout>
      </LinearLayout>
        </LinearLayout>
  </ScrollView>
