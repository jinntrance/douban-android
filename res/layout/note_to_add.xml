<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_huge">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无笔记哦！赶紧添加吧～"
        android:id="@+id/note2add_text"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_huge"
        android:editable="false"
        style="@style/DoubanTextTitle.Black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"   android:clickable="true"
        android:layout_marginTop="@dimen/margin_huge"
        android:src="@drawable/no_page_add_note"
        android:layout_gravity="center"
        android:onClick="addNote" />

</LinearLayout>